<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HSESupporter.Views.Elements.EventView">
    <StackLayout Orientation="Horizontal" Margin="0,0,0,0">
        <StackLayout HeightRequest="45"
                     WidthRequest="45"
                     Margin="10,0,8,0"
                     BackgroundColor="PapayaWhip">
            <Label x:Name="DateNumber"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,-10"
                   FontSize="26"
                   Text="26" />
            <Label x:Name="DateMonth"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   FontSize="12"
                   Text="ЯНВ" />
        </StackLayout>
        <Label
            x:Name="Title"
            Text="Что-то произошло в ванной, поднимитесь на второй этаж, это важно!"
            VerticalOptions="Center"
            Margin="0,0,0,0"
            FontSize="18" />
    </StackLayout>
</ContentView>